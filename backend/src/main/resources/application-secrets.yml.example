# Application Secrets Configuration Example
# Copy this file to application-secrets.yml and fill in your actual secrets
# DO NOT commit application-secrets.yml to version control!

spring:
  # Database credentials
  datasource:
    url: jdbc:postgresql://${DB_HOST:localhost}:${DB_PORT:5432}/${DB_NAME:aboveskycalendar}
    username: ${DB_USER:admin}
    password: ${DB_PASSWORD:changeme-generate-secure-password}
  
  # Email service configuration (SendGrid for production)
  mail:
    host: ${MAIL_HOST:smtp.sendgrid.net}
    port: ${MAIL_PORT:587}
    username: ${MAIL_USERNAME:apikey}
    password: ${MAIL_PASSWORD:changeme-sendgrid-api-key}
    properties:
      mail:
        smtp:
          auth: true
          starttls:
            enable: true
            required: true
  
  # Redis configuration (for caching)
  redis:
    host: ${REDIS_HOST:localhost}
    port: ${REDIS_PORT:6379}
    password: ${REDIS_PASSWORD:changeme-generate-secure-password}
    timeout: 2000ms
    jedis:
      pool:
        max-active: 8
        max-idle: 8
        min-idle: 0
        max-wait: -1ms

# JWT configuration
jwt:
  secret: ${JWT_SECRET:changeme-use-generate-secrets-script-minimum-64-characters}
  expiration: 86400000 # 24 hours in milliseconds
  refresh-expiration: 604800000 # 7 days in milliseconds

# SendGrid configuration
sendgrid:
  api-key: ${SENDGRID_API_KEY:changeme-your-sendgrid-api-key}
  from-email: ${SENDGRID_FROM_EMAIL:noreply@aboveskycalendar.com}
  from-name: ${SENDGRID_FROM_NAME:Above Sky Calendar}

# AWS S3 configuration (for backups)
aws:
  s3:
    access-key: ${AWS_ACCESS_KEY_ID:changeme-aws-access-key}
    secret-key: ${AWS_SECRET_ACCESS_KEY:changeme-aws-secret-key}
    bucket-name: ${AWS_S3_BUCKET:aboveskycalendar-backups}
    region: ${AWS_REGION:us-east-1}

# CORS configuration
cors:
  allowed-origins: ${CORS_ALLOWED_ORIGINS:https://yourdomain.com,https://www.yourdomain.com}
  allowed-methods: GET,POST,PUT,DELETE,PATCH,OPTIONS
  allowed-headers: "*"
  allow-credentials: true
  max-age: 3600

# Monitoring credentials
management:
  endpoints:
    web:
      exposure:
        include: health,info,metrics,prometheus
  metrics:
    export:
      prometheus:
        enabled: true

# Slack webhook for alerts (optional)
alerts:
  slack:
    webhook-url: ${SLACK_WEBHOOK_URL:changeme-your-slack-webhook-url}

# OAuth2 providers (optional - for social login)
oauth2:
  google:
    client-id: ${GOOGLE_CLIENT_ID:changeme}
    client-secret: ${GOOGLE_CLIENT_SECRET:changeme}
  facebook:
    client-id: ${FACEBOOK_CLIENT_ID:changeme}
    client-secret: ${FACEBOOK_CLIENT_SECRET:changeme}

# Notes:
# 1. Generate secure secrets using: ./scripts/generate-secrets.sh
# 2. Store secrets securely (password manager, vault, etc.)
# 3. Use Docker secrets in production
# 4. Never commit secrets to version control
# 5. Rotate secrets regularly (every 90 days recommended)
# 6. Use different secrets for each environment (dev, staging, prod)
